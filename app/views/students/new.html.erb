<div class="container">
  <div class="row">
    <h1>New Student</h1>
  </div>

  <%= form_with model: @student, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :lastname %>
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :grade %>
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :homeroom %>
      <%= f.text_field :homeroom, class: 'form-control' %>
    </div>

    <%= f.submit "Create Student", class: 'btn btn-primary' %>
  <% end %>
</div>