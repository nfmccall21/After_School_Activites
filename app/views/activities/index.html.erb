<div class="container">
    <div class="row">
        <h1>Activities</h1>
    </div>

    <%# FROM index.html.erb FROM LAB 6 %>
    <div class="row row-cols-4">
      <% @activities.each_with_index do |activity| %>
        <div class="col">
          <div class="card mb-1 p-2 h-100">
            <div class="card-body">
              <h5 class="card-title"><%= link_to activity.title, activity %></h5>
              <%= link_to "More...", activity, class: "btn btn-sm btn-primary" %>
              <p class="card-text"><%= activity.day %></p>
              <p class="card-text"><%= activity.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>


</div>